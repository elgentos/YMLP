<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <elgentos>
            <label>Elgentos</label>
            <sort_order>195</sort_order>
        </elgentos>
    </tabs>
  <sections>
    <ymlp translate="label">
      <label>YMLP</label>
      <tab>elgentos</tab>
      <frontend_type>text</frontend_type>
      <sort_order>1000</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <!-- New groups go here -->
        <general translate="label">
          <label>General</label>
          <frontend_type>text</frontend_type>
          <sort_order>100</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <expanded>1</expanded>
          <show_in_store>1</show_in_store>
          <fields>
            <enabled translate="label comment">
              <label>Enabled</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </enabled>
            <ymlpuser translate="label comment">
              <label>YMLP username</label>
              <frontend_type>text</frontend_type>
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </ymlpuser>
            <ymlpapikey translate="label comment">
              <label>YMLP API key</label>
              <frontend_type>text</frontend_type>
              <sort_order>25</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </ymlpapikey>
            <ymlpgroupid translate="label comment">
              <label>Group ID</label>
              <comment>
                <![CDATA[The ID of the group you want to place the email addresses in.<br />When using a multi store setup, change the Configuration Scope to set different groups for your different stores.]]>
              </comment>
              <frontend_type>text</frontend_type>
              <sort_order>30</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </ymlpgroupid>
          </fields>
        </general>
        <about translate="label">
              <label>Developer</label>
              <frontend_type>text</frontend_type>
              <sort_order>900</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <fields>
                  <info translate="label">
                      <frontend_model>ymlp/about</frontend_model>
                      <sort_order>1</sort_order>
                      <show_in_default>1</show_in_default>
                      <show_in_website>1</show_in_website>
                      <show_in_store>1</show_in_store>
                  </info>
              </fields>
          </about>
      </groups>
    </ymlp>
  </sections>
</config>